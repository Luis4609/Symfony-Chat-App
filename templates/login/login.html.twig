{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<main class="form-signin">
		<form action="{{ path('login') }}" method="post">
			<h1 class="h3 mb-3 fw-normal">Login</h1>
			<div class="mb-3">
				<label for="username" class="form-label">Email</label>
				<input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" require/>
				<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input type="password" id="password" name="_password" class="form-control" require/>
			</div>
			{# If you want to control the URL the user is redirected to on success TODO #}
			<input type="hidden" name="_target_path" value="{{ path('messages_index') }}"/>

			<button type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
			<a class="w-100 btn btn btn-secondary" href="{{ path('app_register') }}" role="button" style="margin-top: 5px;">Register now</a>
			<a class="w-100 btn btn btn-danger" href="{{ path('app_forgot_password_request') }}" role="button" style="margin-top: 5px;">Forgot your password?</a>
			<p class="mt-5 mb-3 text-muted">&copy; 2021-2022</p>
		</form>
	</main>
</body></html></form></main>{% endblock %}
